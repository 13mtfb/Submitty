IfModule mod_ssl.c>
SSLUseStapling On
SSLStaplingCache "shmcb:logs/stapling-cache(150000)"
<VirtualHost _default_:443>
	suPHP_ConfigPath /INSTALLATION_DIRECTORY
	AddDefaultCharset utf-8
	AddExternalAuth pwauth /usr/sbin/pwauth
	SetExternalAuthMethod pwauth pipe
	ServerAdmin admin@domain.here
	ServerName hss.cs.rpi.edu

	DocumentRoot /INSTALLATION_DIRECTORY/website/public

	DirectoryIndex index.html index.php index.htm index.cgi

	<Files .*>
		Order allow,deny
		Deny from all
	</Files>
	
	<Files *~>
		Order allow,deny
		Deny from all
	</Files>

	<Files #*>
		Order allow,deny
		Deny from all
	</Files>

	<Directory />
		Options FollowSymLinks
		AllowOverride None
	</Directory>


	ErrorLog ${APACHE_LOG_DIR}/submiterror.log

	# Possible values include: debug, info, notice, warn, error, crit,
	# alert, emerg.
	LogLevel error

	CustomLog ${APACHE_LOG_DIR}/submit.log combined

	<Directory /INSTALLATION_DIRECTORY/website/public>
		Options ExecCGI FollowSymLinks Includes
		AuthType Basic
		AuthName "Please log in"
		AllowOverride None
		AuthBasicProvider external
		AuthExternal pwauth
		require valid-user
		AddHandler cgi-script .cgi .pl .py .sh
		AddOutputFilter Includes shtml html htm php ssi
		Allow from all
	</Directory>

	#   SSL Engine Switch:
	#   Enable/Disable SSL for this virtual host.
	SSLEngine on
	SSLHonorCipherOrder On
	SSLProtocol +ALL -SSLv2 -SSLv3 +TLSv1
	SSLCipherSuite ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-SHA384:ECDHE-RSA-AES256-SHA:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-SHA:DHE-RSA-AES256-SHA:DHE-RSA-AES128-SHA:DHE-RSA-DES-CBC3-SHA

	SSLCertificateFile    /etc/apache2/ssl/hss.cer
	SSLCertificateKeyFile /etc/apache2/ssl/hss.key
	SSLCertificateChainFile /etc/apache2/ssl/chain.cer
	<FilesMatch "\.(cgi|shtml|phtml|php)$">
		SSLOptions +StdEnvVars
	</FilesMatch>
	<Directory /usr/lib/cgi-bin>
		SSLOptions +StdEnvVars
	</Directory>
</VirtualHost>
</IfModule>
